<div class="main movie-show">
  <div class="container">
    <div class="movie row">
      
      <!-- Display the movie's info here -->
      <div class="info row">
        <div class="col-sm-5">
          <%= image_tag @movie.image %>
        </div>
        <div class="col-sm-7" style="position:relative;">
          <h3 class="movie-title"> <%= @movie.title %>  </h3></br>
          <p class="movie-release-year text-right"> <%= @movie.release_year %> </p>
          <p class="movie-plot" style="position:relative; top:1em"> <%= @movie.plot %> </p>
          <div style="padding-top:2em; color:#0393ff" >IMDB Rating:<span class="stars pull-right" id="stars" ><%= @movie.rating %></span></div>
          
          </div>
        
        
      </div>
    </div>
  </div>
  
  <div class="container">
    <h2>Cast</h2>
    <div class="cast row">
      <% @actors.each do |f| %>
        <div class="actor col-md-3">
      <!-- Display each actor's info here -->
          <%= link_to image_tag(f.image) , actor_path(f) %>
          <h3 class="actor-name"> <%= f.name %> </h3>
          <p class="actor-bio">as: <%= f.character_in(@movie) %> </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
 $.fn.stars = function() {
    return this.each(function(i,e){$(e).html($('<span/>').width($(e).text()*16));});
};

$(document).ready($('#stars').stars());
</script>