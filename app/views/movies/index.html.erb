<div id="wrapper jumbotron">
  <h2 style="text-align:center;color:#0393ff; margin:0 auto; padding-top:30px">POPULAR MOVIES<hr></h2>
  <div id="content" class="row" style ="margin:0 2em;">
    
    
    <div class="col-md-6">
    <ul id="movieposters">
        <% movie_list = random_movie %>
        <% movie1 = movie_list[0] %>
  			<li>
  				<img src='<%= movie1.image %>' alt="X-Men" width="300px" height="450px"/>
  				<div class="movieinfo">
  					<h3><%= movie1.title %></h3>
  					<p><%= movie1.tagline %> </p>
  					<%= link_to "More info" , movie_path(movie1) %>
  				</div>
  			</li>
  			<% movie2 = movie_list[1] %>
  			<li>
  				<img src='<%= movie2.image %>' alt="X-Men" width="300px" height="450px" />
  				<div class="movieinfo">
  					<h3><%= movie2.title %></h3>
  					<p><%= movie2.tagline %> </p>
  					<%= link_to "More info" , movie_path(movie2) %>
  				</div>
  			</li>
  	</ul>
  	</div>
  	<div class="col-md-6">
  	<ul id="movieposters_right">
  			<% movie3 = movie_list[2] %>
  			<li>
  				<img src='<%= movie3.image %>' alt="X-Men" width="300px" height="450px"  />
  				<div class="movieinfo_right ">
  					<h3><%= movie3.title %></h3>
  					<p><%= movie3.tagline %> </p>
  					<%= link_to "More info" , movie_path(movie3) %>
  				</div>
  			</li>
  			<% movie4 = movie_list[3] %>
  			<li>
  				<img src='<%= movie4.image %>' alt="X-Men" width="300px" height="450px" />
  				<div class="movieinfo_right">
  					<h3><%= movie4.title %></h3>
  					<p><%= movie4.tagline %> </p>
  					<%= link_to "More info" , movie_path(movie4) %>
  				</div>
  			</li>
			
		</ul>
		</div>
	</div>
</div>
<hr>
<div class="main">
  <div class="container">
   <h2>In Theaters</h2>
    <div class="row">
      <% @movies.each do |f| %>
      <div class="col-md-3">
        <div class="movie">
        <%= image_tag f.image %>
        <h3> <%= f.title %> </h3>
        <p> <%= f.release_year %> </p>
        <%= link_to "Learn more", movie_path(f) %>
        </div>
    </div>
  <% end %>
      
  </div>
</div>
